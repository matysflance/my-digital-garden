---
import BlogPost from '@components/BlogPost.astro';
import MainLayout from '@layouts/Main.astro';

import type { BlogPostFrontmatter } from '@types';

const blogPosts = await Astro.glob<BlogPostFrontmatter>(
  './posts/*.md'
);
---

<MainLayout
  title="Blog"
  description="Whenever I feel like expressing my thoughts on some topic in a more elaborate manner, Iâ€™m going to do it here."
>
  <h1 class="font-bold text-4xl">Blog</h1>
  <ul class="list-disc list ps-8">
    {blogPosts.map((post) => <BlogPost post={post} />)}
  </ul>
</MainLayout>
